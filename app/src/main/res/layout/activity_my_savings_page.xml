<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".client.MySavingsPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCurrentSavingsClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:text="Mis Ahorros"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:textColor="@color/purple_700" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <TableLayout
                    android:id="@+id/my_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@color/white"
                    android:columnCount="4"
                    android:rowCount="4">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:visibility="invisible">

                        <View
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"></View>

                        <View
                            android:layout_width="100dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"></View>

                        <View
                            android:layout_width="100dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"></View>

                        <View
                            android:layout_width="70dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"></View>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/purple_200"
                        android:gravity="start">

                        <TextView
                            android:layout_gravity="center"
                            android:text="Tipo"
                            android:textColor="@color/purple_700"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_gravity="center"
                            android:text="Saldo"
                            android:textColor="@color/purple_700"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:text="Cuota"
                            android:textColor="@color/purple_700"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_gravity="center"
                            android:text="Activar"
                            android:textColor="@color/purple_700"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_height="50dp"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dp"
                            android:text="NavideÃ±o"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/balanceChristmas"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/quotaChristmas"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="18dp"></TextView>

                        <ImageButton
                            android:id="@+id/btnActiveChristmas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#4CAF50"
                            android:contentDescription="Activar Ahorro"
                            android:foreground="?android:attr/textCheckMark"></ImageButton>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_height="50dp"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Escolar"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/balanceSchool"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/quotaSchool"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="18dp"></TextView>

                        <ImageButton
                            android:id="@+id/btnActiveSchool"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#4CAF50"
                            android:contentDescription="Activar ahorro"
                            android:foreground="?android:attr/textCheckMark">
                        </ImageButton>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_height="50dp"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Marchamo"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/balanceMarchamo"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/quotaMarchamo"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="18dp"></TextView>

                        <ImageButton
                            android:id="@+id/btnActiveMarchamo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#4CAF50"
                            android:contentDescription="Activar Ahorro"
                            android:foreground="?android:attr/textCheckMark">
                        </ImageButton>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_height="50dp"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Extraordinario"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/balanceExtra"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/quotaExtra"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="18dp"></TextView>

                        <ImageButton
                            android:id="@+id/btnActiveExtra"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#4CAF50"
                            android:contentDescription="Activar Ahorro"
                            android:foreground="?android:attr/textCheckMark">
                        </ImageButton>
                    </TableRow>
                </TableLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/layActiveSaving"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="invisible">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:text="Agregar Monto"
                    android:textColor="@color/purple_700"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <EditText
                    android:id="@+id/txtSavingAmount"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/white"
                    android:inputType="number"></EditText>

                <Button
                    android:id="@+id/btnActiveSaving"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:onClick="toSaving"
                    android:text="Agregar"
                    android:textColor="@color/white"></Button>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>